<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/icons"
    android:orientation="vertical"
    android:padding="10dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/contributor_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="5dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/contributor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/contributor_image"
                android:padding="5dp"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:text="ssssssss"/>

            <TextView
                android:textSize="12sp"
                android:lines="1"
                android:ellipsize="end"
                android:id="@+id/contributor_portfolio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/contributor_name"
                android:layout_toRightOf="@id/contributor_image"
                android:padding="5dp"
                tools:text="ssssssss"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/contributor_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/contributor_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="5dp"/>
    </LinearLayout>

</android.support.v7.widget.CardView>